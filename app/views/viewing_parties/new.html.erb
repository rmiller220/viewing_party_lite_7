<h3>Create a Movie Party for <%= @facade.title %></h3>
<%= link_to "Discover Movies", user_dashboard_discover_index_path(@facade.user) %>
<h3>Viewing Party Details</h3>
<%= form_with model: @viewing_party, url: user_dashboard_movie_viewing_parties_path(@user, @movie.id), local: true do |form| %>
  <div>
    <%= form.label :duration %>
    <%= form.text_field :duration %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
  <div>
    <%= form.label :time %>
    <%= form.time_field :time %>
  </div>
  <h4>Invite Other Users</h4>
  <div>
  <% @all_users.each do |user|%>
    <%= form.label :"#{user.name} (#{user.email})" %>
    <%= form.check_box :"#{user.name}" %>
    <% end %>
  <div>
    <%= form.submit "Create Party" %>
  </div>
  <% end %>
